<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium"
    android:gravity="center">

    <!-- android:scaleType="center" android:adjustViewBounds="true"-->
    <ImageView
        android:id="@+id/introImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/elevation_high"
        android:scaleType="centerInside"
        android:src="@drawable/onboarding_screen_1"
        app:layout_constraintBottom_toTopOf="@id/introTitle"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/introTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_display"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintEnd_toEndOf="@+id/introImage"
        app:layout_constraintStart_toStartOf="@+id/introImage"
        app:layout_constraintTop_toBottomOf="@+id/introImage" />


    <TextView
        android:id="@+id/introDescription"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Lorem ipsum dolor sit amet. Vel voluptatem voluptatem ea nesciunt delectus eos cupiditate eius et totam nostrum id ullam maiores sed vero laboriosam."
        android:textAlignment="center"
        android:textSize="@dimen/text_size_xlarge"
        app:layout_constraintEnd_toEndOf="@+id/introTitle"
        app:layout_constraintStart_toStartOf="@+id/introTitle"
        app:layout_constraintTop_toBottomOf="@+id/introTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>