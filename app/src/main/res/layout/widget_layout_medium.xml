<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/widget_medium_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smishing Detection App"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/widget_medium_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        android:textColor="#D32F2F"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/widget_medium_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updated: --:--"
        android:textSize="12sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/widget_open_app_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open App" />

    <Button
        android:id="@+id/widget_report_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Smishing"
        android:layout_marginTop="4dp" />
</LinearLayout>
